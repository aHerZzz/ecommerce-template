---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { storeSettings } from '../config/store';
import { themeSettings } from '../config/theme';
import CookieBanner from '../components/ui/CookieBanner';

const prefersDark = themeSettings.darkMode?.default === 'dark';
const prefersSystem = themeSettings.darkMode?.default === 'system';

const rootStyle = Object.entries({
  '--color-primary-light': themeSettings.palette.primary,
  '--color-accent-light': themeSettings.palette.accent,
  '--color-background-light': themeSettings.palette.background,
  '--color-surface-light': themeSettings.palette.surface,
  '--color-text-light': themeSettings.palette.text,
  '--color-primary-dark': themeSettings.paletteDark?.primary ?? themeSettings.palette.primary,
  '--color-accent-dark': themeSettings.paletteDark?.accent ?? themeSettings.palette.accent,
  '--color-background-dark': themeSettings.paletteDark?.background ?? themeSettings.palette.background,
  '--color-surface-dark': themeSettings.paletteDark?.surface ?? themeSettings.palette.surface,
  '--color-text-dark': themeSettings.paletteDark?.text ?? themeSettings.palette.text,
  '--font-body-base': themeSettings.typography.body,
  '--font-heading-base': themeSettings.typography.heading
})
  .map(([key, value]) => `${key}: ${value};`)
  .join(' ');

const themeScript = `(() => {
  const prefersSystem = ${JSON.stringify(prefersSystem)};
  const prefersDark = ${JSON.stringify(prefersDark)};
  const stored = localStorage.getItem('theme');
  const prefers = window.matchMedia('(prefers-color-scheme: dark)').matches;
  const theme = stored || (prefersSystem ? (prefers ? 'dark' : 'light') : prefersDark ? 'dark' : 'light');
  const resolved = theme === 'system' ? (prefers ? 'dark' : 'light') : theme;
  document.documentElement.classList.toggle('dark', resolved === 'dark');
})();`;

const { title = storeSettings.branding.storeName, description = storeSettings.branding.tagline } =
  Astro.props;
---
<!DOCTYPE html>
<html lang="es" style={rootStyle}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href={themeSettings.logos.favicon} />
    {themeSettings.darkMode?.enabled && (
      <script>
        {themeScript}
      </script>
    )}
  </head>
  <body class="min-h-screen bg-background text-text dark:bg-background-dark dark:text-text-dark">
    <Header />
    <main class="container py-8">
      <slot />
    </main>
    <Footer />
    <CookieBanner client:load />
  </body>
</html>
