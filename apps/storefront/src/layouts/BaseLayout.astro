---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { storeSettings } from '../config/store';
import { themeSettings } from '../config/theme';

const { title = storeSettings.branding.storeName, description = storeSettings.branding.tagline } =
  Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href={themeSettings.logos.favicon} />
    <style>
      {` :root {
          --color-primary: ${themeSettings.palette.primary};
          --color-accent: ${themeSettings.palette.accent};
          --color-background: ${themeSettings.palette.background};
          --color-surface: ${themeSettings.palette.surface};
          --color-text: ${themeSettings.palette.text};
          --font-body: ${themeSettings.typography.body};
          --font-heading: ${themeSettings.typography.heading};
        }
      `}
    </style>
  </head>
  <body>
    <Header />
    <main class="container py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
