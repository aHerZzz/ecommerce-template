---
import { t } from '../i18n/config';
import { storeSettings } from '../config/store';
import { themeSettings } from '../config/theme';

const locale = t;
const { storeName, tagline } = storeSettings.branding;
const logo = themeSettings.logos.main;
---
<header class="bg-white shadow-sm sticky top-0 z-10">
  <div class="container flex items-center justify-between py-4 gap-4">
    <a href="/" class="flex items-center gap-3">
      {logo ? (
        <img src={logo} alt={`Logo de ${storeName}`} class="h-10 w-auto" />
      ) : (
        <span class="text-xl font-bold text-primary">{storeName}</span>
      )}
      <span class="text-xs text-slate-500">{tagline}</span>
    </a>
    <div class="flex-1 max-w-xl">
      <label class="relative block">
        <span class="sr-only">{locale('searchPlaceholder')}</span>
        <input
          type="search"
          name="search"
          placeholder={locale('searchPlaceholder')}
          class="w-full rounded-full border border-gray-200 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-accent"
        />
      </label>
    </div>
    <div class="flex items-center gap-3 text-sm">
      <a href="/cart" class="flex items-center gap-1 hover:text-accent">
        <span aria-hidden="true">ðŸ›’</span> {locale('cart')}
      </a>
      <a href="/profile" class="flex items-center gap-1 hover:text-accent">
        <span aria-hidden="true">ðŸ‘¤</span> {locale('profile')}
      </a>
    </div>
  </div>
</header>
