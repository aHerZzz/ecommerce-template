---
import legalConfig from '../../config/legal.config.json';
import { storeSettings } from '../config/store';
import { t } from '../i18n/config';
const locale = t;
---
<footer class="mt-10 bg-primary text-white dark:bg-surface-dark dark:text-text-dark" role="contentinfo">
  <div class="container flex flex-col gap-4 py-8 sm:flex-row sm:items-center sm:justify-between">
    <div class="space-y-1">
      <p class="font-semibold">{legalConfig.company}</p>
      <p class="text-sm text-slate-200 dark:text-slate-300">{storeSettings.branding.tagline}</p>
      <p class="text-sm text-slate-200 dark:text-slate-300">{legalConfig.registeredAddress}</p>
      <a
        href={`mailto:${legalConfig.contactEmail}`}
        class="text-sm underline text-slate-100 focus-visible:outline-none focus-visible:ring"
      >
        {legalConfig.contactEmail}
      </a>
      <p class="text-sm text-slate-200 dark:text-slate-300">© {legalConfig.year} - {locale('legal')}</p>
    </div>
    <nav class="flex flex-wrap gap-4 text-sm" aria-label="Páginas legales">
      {legalConfig.legalPages.map((page) => (
        <a
          href={`/legal/${page.slug}`}
          class="underline hover:text-accent focus-visible:outline-none focus-visible:ring"
        >
          {page.title}
        </a>
      ))}
    </nav>
  </div>
</footer>
