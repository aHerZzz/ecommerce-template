---
import legalConfig from '../../config/legal.config.json';
import { storeSettings } from '../config/store';
import { t } from '../i18n/config';
const locale = t;
---
<footer class="bg-primary text-white mt-10">
  <div class="container py-8 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div class="space-y-1">
      <p class="font-semibold">{legalConfig.company}</p>
      <p class="text-sm text-slate-200">{storeSettings.branding.tagline}</p>
      <p class="text-sm text-slate-200">{legalConfig.registeredAddress}</p>
      <a href={`mailto:${legalConfig.contactEmail}`} class="text-sm underline text-slate-100">
        {legalConfig.contactEmail}
      </a>
      <p class="text-sm text-slate-200">Â© {legalConfig.year} - {locale('legal')}</p>
    </div>
    <nav class="flex flex-wrap gap-4 text-sm">
      {legalConfig.legalPages.map((page) => (
        <a href={`/legal/${page.slug}`} class="hover:text-accent underline">
          {page.title}
        </a>
      ))}
    </nav>
  </div>
</footer>
